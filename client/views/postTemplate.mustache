<div class="post" data-post_id = {{post_id}}>
    <div class="post-header">
        <h2>{{trail_title}}</h2>
        <h6>Author:<a href="/user/{{user_name}}/profile">{{user_name}}</a></h6>
        <div class="post-type"><h6>{{post_type}}</h6></div>
    </div>
    <div class="post-content">
        <p class="post-content">{{post_content}}</p>
    </div>
    <div class="post-media">
        {{#trail_media.length}}
            <div class="post-media">
            {{#trail_media}}
                <img src="{{.}}" alt="Trail Media" height="675px" width="1200px">
            {{/trail_media}}

            </div>
        {{/trail_media.length}}
    </div>
</div>
